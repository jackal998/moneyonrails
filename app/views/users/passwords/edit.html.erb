<!-- row -->
<div class="row justify-content-center">
  <div class="col-xl-3 col-md-6 col-sm-12">
    <div class="card">
      <div class="card-header">
        <h4 class="card-title">修改密碼</h4>
      </div>
      <div class="card-body">
        <div class="row">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="field">
              <%= f.label :password, "新密碼" %><br />
              <% if @minimum_password_length %>
                <em>(密碼至少<%= @minimum_password_length %>位)</em><br />
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", :class => "form-control" %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation, "Confirm new password" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
            </div>

            <div class="actions fc-toolbar">
              <%= f.submit "確定", :class => "text-center btn btn-outline-success btn-rounded" %>
            </div>
          <% end %>
          
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>